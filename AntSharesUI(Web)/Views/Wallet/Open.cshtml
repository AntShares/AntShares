@model AntSharesUI_Web_.Models.Wallet

@{
    ViewData["Title"] = "创建钱包";
}

<form asp-action="Create" method="post" class="form-horizontal">
    <fieldset>
        <h2 class="page-header">打开钱包</h2>
        <div class="form-group">
            <label class="col-sm-4 control-label">选择钱包文件</label>
            <div class="col-sm-6">
                <input asp-for="Name" class="form-control" autocomplete="off" type="file" placeholder="钱包名称">
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">输入钱包密码</label>
            <div class="col-sm-6">
                <input asp-for="Password" class="form-control" autocomplete="off" type="password" placeholder="钱包密码">
                <span asp-validation-for="Password" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-md-push-4 col-sm-push-4">
                <button type="submit" class="btn btn-success">打开钱包</button>
            </div>
        </div>
    </fieldset>
</form>